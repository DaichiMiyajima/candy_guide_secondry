<!DOCTYPE html>
<html lang="en" ng-app="candy">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,minimum-scale=1.0, maximum-scale=1.0,user-scalable=no">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author"      content="Daichi Miyajima">
    <meta property="og:title" content="Where are you?" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bruwbird.com" />
    <meta property="og:image" content="https://bruwbird.com/public/img/initial/Where_are_you--logo.png" />
    <meta property="og:site_name" content="bruwbird.com" />
    <meta property="og:description" content="Share your location with your friends. " />
    <title>Guide</title>
    <link rel="canonical" href="http://guide.com" />
    <link rel="shortcut icon" href="">
    <!-- firebase url -->
    <script src="https://cdn.firebase.com/js/client/2.4.2/firebase.js"></script>
    <!-- GeoFire -->
    <script src="https://cdn.firebase.com/libs/geofire/4.1.1/geofire.min.js"></script>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" media="screen" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <!-- Own Css -->
    <link rel="stylesheet" href="../public/css/index/index.css">
    <link rel="stylesheet" href="../public/css/index/rating.css">
    <link rel="stylesheet" href="../public/css/index/include/indexMessage.css">
    <link rel="stylesheet" href="../public/css/index/include/indexPlace.css">
    <link rel="stylesheet" href="../public/css/index/include/indexTravelMode.css">
    <!-- sweet alert-->
    <script src="../public/ext/sweetalert/sweetalert.min.js"></script>
    <link rel="stylesheet" type="text/css" href="../public/ext/sweetalert/sweetalert.css">
    <!-- jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js"></script>
    <!-- Angular.js -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="https://cdn.firebase.com/libs/angularfire/1.2.0/angularfire.min.js"></script>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <script type="text/javascript" src="../public/bower_components/ngtouchstart/build/ngTouchstart.min.js"></script>
    <script type="text/javascript" src="../public/bower_components/ngtouch/build/ngTouch.min.js"></script>
    <!-- Google Analytics -->
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-80242586-1', 'auto');
        ga('send', 'pageview');
    </script>
</head>
<body class="">
    <div ng-controller="candyController as main">
        <div ng-mousemove="resizeStartMouse($event)" ng-mouseup="resizeEndMouse($event)" ng-mousedown="resizeEndMouse($event)" >
            <!-- Place Include-->
            <div ng-include = "'/views/index/include/indexPlace.htm'"></div>
            <!-- TravelMode Include-->
            <div ng-include = "'/views/index/include/indexTravelMode.htm'"></div>
            <!-- Menu Nav -->
            <nav>
                <div class="nav-wrapper white ">
                    <!-- When release, we hide backScreen -->
                    <!--<a class="backScreen grey-text"> < </a>-->
                    <a class="grey-text groupname">{{grouname}}</a>
                    <a data-activates="mobile-demo" class="button-collapse grey-text"><i class="material-icons">menu</i></a>
                    <ul class="side-nav" id="mobile-demo">
                        <li><div class="menuContent" ng-click="currentposition()"><i class="material-icons">my_location</i><span>MyLocation</span></div></li>
                        <li><div class="menuContent" ng-click="addlocationbutton()"><i class="material-icons">location_on</i><span>Place</span></div></li>
                        <li><div class="menuContent" ng-click="placeModal()"><i class="material-icons">search</i><span>PlaceSearch</span></div></li>
                    </ul>
                </div>
            </nav>
            
            <!-- Geolocation OFF -->
            <div id="geolocationOff" class="firsthide">
                <label>Your location services are unavailable.</label><br/>
                <label>Settings → Privacy → Location Service → Safari WebSites</label>
            </div>
            <!-- Geolocation OFF end-->
            
            <!-- Flexible Box -->
            <div class="flex-container">
                <!-- Google Map -->
                <div id="candy_map_tab">
                    <section class="container-full">
                        <div id="map"></div>
                    </section>
                </div>
                <div class="messageBox">
                    <div class="editor-resizer" ng-touchmove="resizeStart($event)" ng-touchend="resizeEnd($event)"><i class="small material-icons">chat_bubble_outline</i></div>
                    <div class="flex-box">
                        <!-- Message Include-->
                        <div ng-include = "'/views/index/include/indexMessage.htm'"></div>
                    </div>
                </div>
            </div>
            <div class="messageInputArea">
                <div class="messageInputAreaDiv">
                    <textarea ng-model="messageInput" id="icon_prefix2" class="materialize-textarea" ng-focus="onfocus()" ng-blur="onblur()"></textarea>
                    <a class="waves-effect waves-light btn" id="sendbutton" ng-mousedown="sendMessage(messageInput)">Send</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Google Maps -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_7QNqea1T9-S948DkonWIaMNv1jD6RJs&libraries=geometry,places"></script>
    <script src="../public/js/index/globalvariable.js"></script>
    <script src="../public/js/index/service/firebaseService.js"></script>
    <script src="../public/js/index/service/screenEventService.js"></script>
    <script src="../public/js/index/service/gpslocationService.js"></script>
    <script src="../public/js/index/service/googlemapService.js"></script>
    <script src="../public/js/index/controller/candyController.js"></script>
    <script src="../public/js/index/controller/messageController.js"></script>
    <script src="../public/js/index/controller/placeController.js"></script>
    <script src="../public/js/index/googlemap.js"></script>
    <script src="../public/js/index/popup.js"></script>
</body>
</html>
